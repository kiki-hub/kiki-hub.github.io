<!DOCTYPE html>
<html lang="en">

<head>
    <%- include common %>
        <title>学生个人中心</title>

</head>

<body>
    <%- include("head",{title:"login"}) %>
        <div class="container container-fluid ">
            <%- include("stu_nav",{type:'updatemsg'}) %>
                <div class="row">
                    <div class="col-md-4 form_borders">
                        <form class="form-border main" method="POST" action="/student/changemsg">
                            <div class="form-group">
                                <label for="mobile">账号:</label>
                                <input disabled name="mobile" value="<%- mobile%>" type="tel" class="form-control" id="mobile" placeholder="请输入你的手机号">
                            </div>
                            <div class="form-group">
                                <label for="username">用户名:</label>
                                <input disabled name="username" value="<%- username%>" type="text" class="form-control" id="username" placeholder="请输入你的用户名">
                            </div>
                            <div class="form-group">
                                <label for="email">邮箱:</label>
                                <input name="email" type="text" class="form-control" id="email" placeholder="请输入你的个人邮箱">
                            </div>
                            <div class="form-group">
                                <label for="bancode">班级:</label>
                                <select name="bancode" class="form-control">
                            <option value="">请务必选择个人班级</option>
                        <%    banjilist.forEach(item=>{  %>
                                <option value="<%- item.bancode %>" > <%- item.banji %></option>
                                <%     })   %>
                        </select>
                            </div>
                            <div class="form-group">
                                <label for="md">备注:</label>
                                <input name="md" type="text" class="form-control" id="md" placeholder="请输入你的备注信息">
                            </div>
                            <button type="submit" class="btn btn-danger btn-block">提交</button>
                            <button type="reset" class="btn btn-success btn-block">重置</button>
                        </form>
                    </div>
                </div>
        </div>

</body>

</html>